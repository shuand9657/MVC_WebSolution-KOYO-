
@{
    ViewBag.Title = "testCancelToken";
    Layout = "~/Views/Shared/_LayoutNGKendo.cshtml";
}
<script src="~/TestScript/cancelController.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/ngTreeViewStyle.css" />




<html>
<head>
</head>
<body ng-app="MVCApp">
    <h2>testCancelToken</h2>
    <div ng-controller="cancelTokenCtrl as vm">
        <div style="width:30%; float:left;">
            <a class="k-link" ng-click="vm.abortRequest()">Abort</a>
            <div block-ui="vm.block1">
                <button class="btn-default k-button" ng-click="vm.trigger1('vm.block1')">start1</button>
                <ul>
                    <li>item1-1</li>
                    <li>item1-2</li>
                    <li>item1-3</li>
                </ul>
            </div>
            <hr />
            <a class="k-link" ng-click="vm.cancelRequest()">Abort</a>
            <div block-ui="vm.block2">
                <button class="k-button btn-default" ng-click="vm.trigger2('vm.block2')">start2</button>
                <ul>
                    <li>item2-1</li>
                    <li>item2-2</li>
                    <li>item2-3</li>
                </ul>
            </div>
        </div>

        <div style="width:70%; float:right;">
            <button class="btn-default" ng-click="vm.eventFire()">event fired</button>
            <pre>{{vm.moduleResult}}</pre>
        </div>

        <div style="clear:both;"></div>
    </div>
</body>
</html>